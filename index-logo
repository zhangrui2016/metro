<script>
$(function(){
    //输入框获得失去焦点
    $(".input-div .iptext").focus(function(){
        $(this).val("");
    })
    $(".input-div .iptext").blur(function(){
        if($(this).val().trim().length==0){
            $(this).val($(this).attr("data-default"));
        }
    })

    //登陆注册切换
    $(".before-login-tab>span").click(function(){
        var nIndex=$(this).index();
        $(this).addClass("current").siblings().removeClass("current");
        $(".before-login-con>div").eq(nIndex).addClass("current").siblings().removeClass("current");
    })

    //演示 显示错误提示
    $(".login-btn").click(function(){
        $(".error-tips").show();
    })

    //公告动画
    var noticeAnimate=function(){
        var defaults = {
            durtion:5000
        }
        var firstClone=$(".in-notices>ul>li").eq(0).clone(true,true);
        $(".in-notices>ul").append(firstClone);
        var len=$(".in-notices>ul>li").length;
        var litH=$(".in-notices>ul>li").height();
        var ulHei=litH*len;
        $(".in-notices>ul").css({"height":ulHei,"top":0})
        var step=0;
        function autoMove(){
            $(".in-notices>ul").animate({"top":-step*litH},500, function () {
                if(step==len-1){
                    step=1;
                    $(".in-notices>ul").css("top",0)
                }else{
                    step++;
                }
            });
            setTimeout(autoMove,defaults.durtion)
        }
        autoMove();
    }
    var notice=new noticeAnimate();

    //投资动画
    var touziAnimate=function(){
        var defaults = {
            durtion:8000
        }
        var firstClone=$(".touzi-con-detail>ul>li").eq(0).clone(true,true);
        $(".touzi-con-detail>ul").append(firstClone);
        var len=$(".touzi-con-detail>ul>li").length;
        var litW=$(".touzi-con-detail>ul>li").width();
        var ulWid=litW*len;
        $(".touzi-con-detail>ul").css({"width":ulWid,"left":0})
        var step=0;
        function autoMove(){
            $(".touzi-con-detail>ul").animate({"left":-step*litW},500, function () {
                if(step==len-1){
                    step=1;
                    $(".touzi-con-detail>ul").css("left",0)
                }else{
                    step++;
                }
            });
            setTimeout(autoMove,defaults.durtion)
        }
        autoMove();
    }
    var touzi=new touziAnimate();

    //pad导航菜单
    $(".menu-operate").click(function(){
        $(".header .nav").slideToggle();
    })
    if(parseInt($(window).width())<800){
        $(".header .nav>ul>li").click(function(){
            $(".header .nav").slideUp();
        })
    }
})
</script>
</body>
